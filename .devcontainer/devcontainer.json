{
  "name": "py-conda",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/rocker-org/devcontainer-features/miniforge:2": {
      "mamba": "true",
      "condaVersion": "latest"
    }
  },
  "postCreateCommand": "mamba env update -n base -f environment.yml || true",
  "customizations": {
    "vscode": { "extensions": ["ms-python.python"] }
  }
}
